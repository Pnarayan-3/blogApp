<div class="admin-title">
    <h2 class="head">Posts</h2>
    <a href="/add-post" class="btn-a">+ Add New</a>
</div>
<ul class="admin-post">
    <% data.forEach(post=>{ %>
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn-f">Edit</a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn-f">
                </form>
            </div>
        </li>
    <% }) %>
</ul>